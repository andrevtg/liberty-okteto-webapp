<server description="Sample Servlet server">
    <featureManager>
        <feature>servlet-4.0</feature>
    </featureManager>

    <variable name="default.http.port" defaultValue="8080"/>

    <httpEndpoint httpPort="${default.http.port}" id="defaultHttpEndpoint"  host="*" />
    <!-- sets context root to "/" -->
    <webApplication id="ServletSample" location="ServletSample.war" contextRoot="/" />
</server>
